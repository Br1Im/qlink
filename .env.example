# Telegram Bot Token
BOT_TOKEN=your_bot_token_here

# Database (для локальной разработки)
DATABASE_URL="postgresql://postgres:password@localhost:5432/qlink"

# JWT Secret
JWT_SECRET=your_super_secret_key_here

# Server Ports
PORT=3000
API_PORT=4000
NODE_ENV=development

# Frontend URL
FRONTEND_URL=http://localhost:3001

# Webhook (для production)
WEBHOOK_DOMAIN=

# Email (SMTP) - опционально
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@qlink.ru

# SMS - опционально
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://sms.ru/sms/send

# Платежи - опционально
# YooKassa (Яндекс.Касса)
YOOKASSA_SHOP_ID=your-shop-id
YOOKASSA_SECRET_KEY=your-secret-key

# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
