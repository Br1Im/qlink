# Development Frontend Dockerfile with hot reload
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
COPY packages/frontend/package*.json ./packages/frontend/
RUN npm ci

# Copy source code
COPY tsconfig.json ./
COPY packages/frontend ./packages/frontend

WORKDIR /app/packages/frontend

EXPOSE 3000

# Run with hot reload
CMD ["npm", "run", "dev"]
