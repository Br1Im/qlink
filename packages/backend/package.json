{
  "name": "@qlink/backend",
  "version": "1.0.0",
  "description": "Qlink Telegram Bot Backend",
  "main": "dist/bot/start.js",
  "scripts": {
    "dev": "tsx watch src/bot/start.ts",
    "dev:api": "tsx watch src/api/index.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:api\"",
    "build": "tsc",
    "start": "node dist/bot/start.js",
    "start:api": "node dist/api/index.js",
    "bot": "tsx src/bot/start.ts",
    "api": "tsx src/api/index.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "db:setup": "npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed"
  },
  "dependencies": {
    "telegraf": "^4.15.0",
    "dotenv": "^16.3.1",
    "@prisma/client": "^5.7.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.8",
    "axios": "^1.6.7",
    "json2csv": "^6.0.0-alpha.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/json2csv": "^5.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "prisma": "^5.7.0",
    "concurrently": "^8.2.2"
  }
}
